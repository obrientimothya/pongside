!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Pongside'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Pongside'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  - unless @fullscreen
    %body
      %header
        = render 'layouts/navigation'
      %main{:role => "main"}
        = render 'layouts/messages'
        = yield
  - else
    %body.fullscreen
      .container-fluid.fullscreen-container
        = yield
