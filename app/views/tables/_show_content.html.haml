- if @table.matches.where(is_running: true).size > 0
  - unless @table.matches.where(is_running: true).first.title.blank?
    .match-title
      = @table.matches.where(is_running: true).first.title.upcase

- updated_at = "1981-08-17 00:00:00 UTC"
- unless @match.blank?
  - updated_at = @match.updated_at.to_s

#players{style: "margin-top: 20px;", data: {updated_at: "#{updated_at}"}}
  - if @table.matches.where(is_running: true).size > 0
    = render "tables/running_match"
  - else
    = render "tables/previous_match"